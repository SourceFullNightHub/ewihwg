local plr = game.Players.LocalPlayer
function Tween(P)
    Distance = (P.Position - plr.Character.HumanoidRootPart.Position).Magnitude
    if Distance <= 220 then
        plr.Character.PrimaryPart.CFrame = P
    end
    if not plr.Character:FindFirstChild("Smooth") then
        local PartTween = Instance.new("Part", plr.Character)
        PartTween.Name = "Smooth"
        PartTween.Size = Vector3.new(10, 2, 10)
        PartTween.CanCollide = false
        PartTween.Anchored = true
        PartTween.Transparency = 1
        PartTween.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
        PartTween:GetPropertyChangedSignal("CFrame"):Connect(function()
            task.wait(0.01)
            plr.Character.HumanoidRootPart.CFrame = PartTween.CFrame
        end)
        task.spawn(function()
            while wait() do
                game.Players.LocalPlayer.Character.PartTween.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
            end
        end)
    end
    tween = game:GetService("TweenService"):Create(plr.Character.PartTween,TweenInfo.new(Distance/325, Enum.EasingStyle.Linear),{CFrame = P})
    tween:Play()
end
Tween(CFrame.new(10000, 1000000, 10000))
